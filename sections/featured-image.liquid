{{ 'featured-image.css' | asset_url | stylesheet_tag }}

{%- comment -%}In use{%- endcomment -%}
{%- if section.settings.link != blank -%}
  <a href="{{ section.settings.link }}" class="featured-image--link">
    {{
      section.settings.image
      | image_url: width: 450
      | image_tag: widths: '200, 300, 400, 450', loading: 'eager', alt: section.settings.image.alt
    }}
  </a>
{%- else -%}
  <span class="featured-image--link">
    {{
      section.settings.image
      | image_url: width: 450
      | image_tag: widths: '200, 300, 400, 450', loading: 'eager', alt: section.settings.image.alt
    }}
  </span>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.featured.image.name",
  "tag": "section",
  "class": "featured-image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured.image.name"
    }
  ]
}
{% endschema %}
